                android:gravity="start"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/name"
                android:width="150dp"
                android:text="sri ganesh"
                android:textSize="12dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="start"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/amount"
                android:width="120dp"
