<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6,7">

        <TableRow android:background="@color/white">

            <TextView
                android:id="@+id/user_name"
                android:width="200dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="sundar"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/user_phone"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="1234567890"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/user_password"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="********"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/user_aadhar"
                android:width="150dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="0000 0000 0000"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/user_address"
                android:width="200dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="main road,agarakattu,tenkasi,tirunelveli,njasnfjishcshcusuysducsbducbsducbsdubcsudbcsdcsu"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/vinsoft_logo"/>
            <ImageView
                android:id="@+id/aadhar_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/vinsoft_logo"/>
            <ImageView
                android:id="@+id/vehicle_image"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/vinsoft_logo"/>

            <TextView
                android:id="@+id/user_active"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Active"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/user_edit"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/color1"
                android:src="@drawable/baseline_edit"
                android:padding="10dp"
                android:text="Update"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/user_delete"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_delete_forever"
                android:padding="10dp"
                android:textColor="@color/white" />
        </TableRow>

    </TableLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"/>
</LinearLayout>