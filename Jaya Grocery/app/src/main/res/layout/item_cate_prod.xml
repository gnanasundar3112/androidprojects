<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/detail_btn"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardElevation="2dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/cate_prod_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:src="@drawable/vinsoft_logo" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cate_prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca-cola"
                android:textColor="@color/blue_500"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cate_prod_tamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="வெங்காயம்"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cate_prod_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/green_light"
                android:textSize="14dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/cate_prod_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/green_light"
                android:textSize="14dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


