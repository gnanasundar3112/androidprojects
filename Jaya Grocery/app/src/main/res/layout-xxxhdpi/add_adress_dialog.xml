<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_dialog"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/add_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/smoke_purple"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="title"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_dialog_user_id"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_dialog_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Full Name"
                android:inputType="textPostalAddress"
                android:maxLines="1"
                android:paddingHorizontal="15dp"
                android:textSize="10sp"
                android:background="@drawable/outline_box"
                app:hintAnimationEnabled="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_dialog_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Mobile No"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="10"
                android:textSize="10sp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:background="@drawable/outline_box"
                app:hintAnimationEnabled="true"
                android:textColorHint="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_dialog_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="10"
                android:hint="House No., Building Name"
                android:inputType="textPostalAddress"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:background="@drawable/outline_box"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_dialog_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="1"
                android:hint="City"
                android:inputType="textPostalAddress"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/black"
                android:paddingHorizontal="10dp"
                android:background="@drawable/outline_box" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_dialog_state"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="1"
                android:hint="State"
                android:inputType="textPostalAddress"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingHorizontal="10dp"
                android:background="@drawable/outline_box" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_dialog_pincode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="1"
                android:hint="Pincode"
                android:maxLength="6"
                android:inputType="number"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingHorizontal="10dp"
                android:background="@drawable/outline_box" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/add_dialog_primary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="Set to primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_dialog_no"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/borderColor"
                android:textColor="@color/red"
                android:text="NO"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_dialog_yes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/borderColor"
                android:textColor="@color/green"
                android:text="YES"
                app:cornerRadius="5dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>