<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6,7,8,9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:background="@drawable/cellshape"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/ac_id"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="11010001"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ac_party"
                android:width="200dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Gnana Sundar"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:width="150dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="8438910200"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:width="200dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="12-03-42,Main Road"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Agarakattu"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/state_name"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="TamilNadu"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adhar_no"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Aadhar No"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/active"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Enable"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/party_edit"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/yellow"
                android:padding="10dp"
                android:src="@drawable/baseline_edit"
                android:text="Update"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/party_delete"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:src="@drawable/baseline_delete"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>