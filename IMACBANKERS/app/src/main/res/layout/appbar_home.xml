<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    app:cardElevation="3dp">
    <LinearLayout
        android:id="@+id/app_home_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/design_gradient">

        <ImageButton
            android:id="@+id/burgerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="3dp"
            app:borderWidth="0dp"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:fabSize="normal"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/list_icon"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_appbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I-MAC BANKERS"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/NotificationBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:fabCustomSize="42dp"
                    app:srcCompat="@drawable/notifications"
                    app:backgroundTint="@color/backgroungColor"
                    app:tint="@color/purple_700"
                    android:clickable="false"
                    android:focusable="true"
                    android:outlineSpotShadowColor="@color/white"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/notifi_count"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/circle_icon"
                    android:elevation="6dp"
                    android:gravity="center"
                    android:textColor="@color/purple_700"
                    android:text="0"
                    android:textAlignment="center" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>