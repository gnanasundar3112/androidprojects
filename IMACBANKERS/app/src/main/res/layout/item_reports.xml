<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:background="@drawable/cellshape"
            android:id="@+id/report_row"
            android:clickable="true"
            android:focusable="true">


            <TextView
                android:id="@+id/item_report_loan_date"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_loan_no"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="0.0"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_party_name"
                android:width="200dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_grm"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_report_loan_amt"
                android:width="120dp"
                android:gravity="end"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_int_per"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_int_amt"
                android:width="150dp"
                android:gravity="end"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_tol_int"
                android:width="150dp"
                android:gravity="end"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_tol_amt"
                android:width="150dp"
                android:gravity="end"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_bal_amt"
                android:width="150dp"
                android:gravity="end"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_status"
                android:width="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_report_cl_date"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="17-05-2024"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/report_view"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/yellow_400"
                android:padding="10dp"
                android:src="@drawable/list_icon"
                android:textColor="@color/white" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>