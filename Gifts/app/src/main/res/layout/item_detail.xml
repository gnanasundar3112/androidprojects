<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6,7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:background="@drawable/cellshape"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/fun_id"
                android:width="60dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="0001"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/fun_Name"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Marriage"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/party_name"
                android:width="280dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Gnana Sundar"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/area_name"
                android:width="170dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Agarakattu"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/in_amount"
                android:width="150dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/out_amount"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/other_amount"
                android:width="120dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/remarks"
                android:width="150dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Marriage Function"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/color1"
                android:padding="10dp"
                android:src="@drawable/baseline_edit"
                android:text="Update"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:src="@drawable/baseline_delete"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>