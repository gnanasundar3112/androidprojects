<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/income_dialog"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/design_gradient"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="title"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/dia_fun_id"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Function Name"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_fun_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:text="Marriage"
                        android:textSize="10sp"
                        android:inputType="text"
                        android:maxLength="20"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Person Name"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_ac_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:maxLength="50"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Area Name"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_area_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="10sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:maxLength="50"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Received Amount"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_in_amt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:textSize="10sp"
                        android:inputType="numberDecimal"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:maxLength="12"
                        android:digits="0123456789."
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Return Amount"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_out_amt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:textSize="10sp"
                        android:inputType="numberDecimal"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:maxLength="12"
                        android:digits="0123456789."
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other Amount"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_other_amt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:textSize="10sp"
                        android:inputType="numberDecimal"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:maxLength="12"
                        android:digits="0123456789."
                        android:imeOptions="actionNext"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remarks"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dia_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="10sp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:textColor="@color/black"
                        android:background="@drawable/outline_box"
                        android:textColorHint="@color/black"
                        android:textIsSelectable="true"
                        android:maxLines="2"
                        android:inputType="text"
                        android:maxLength="300"
                        android:imeOptions="actionDone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dialog_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/borderColor"
                        android:textColor="@color/red"
                        android:text="Cancel"
                        app:cornerRadius="5dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dialog_save"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/borderColor"
                        android:textColor="@color/green"
                        android:text="Save"
                        app:cornerRadius="5dp" />

                </LinearLayout>

             </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>